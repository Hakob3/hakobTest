{% extends 'main/base.html.twig' %}

{% block title %}{{ 'check_email.email_sent'|trans }}{% endblock %}

{% block body %}
    <div class="page-content pt-4 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-details mt-4">
                        <h1 class="h3 mb-3 font-weight-normal title-gradient-1 text-center">
                            {{ 'reset_password.heading'|trans }}
                        </h1>
                        <p>
                            {{ 'check_email.desc'|trans }} {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}
                            .
                        </p>
                        <p>{{ 'check_email.try_again'|trans({'%path%': path('app_forgot_password_request')})|raw }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
