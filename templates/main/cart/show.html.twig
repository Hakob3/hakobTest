{% extends 'main/base.html.twig' %}

{% block title %}{{ 'cart.title'|trans }}{% endblock %}
{% block page_keywords %}Jeans, Ranked Choice Homepage, Jackets{% endblock %}
{% block page_description %}User's cart of RankedChoice shop!{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('appMainCart') }}
{% endblock %}

{% block body %}
    <div class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="page-details mt-4">
                        <h1 class="h4 font-weight-normal title-gradient-1">{{ 'cart.your_cart'|trans }}</h1>
                        <div id="app"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        if (typeof window.staticStore === 'undefined') {
            window.staticStore = {};
        }

        window.staticStore.urlAssetImageProducts = "{{ asset('uploads/images/products') }}"
    </script>
    {{ encore_entry_script_tags('appMainCart') }}
{% endblock %}