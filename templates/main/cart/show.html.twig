{% extends 'main/base.html.twig' %}

{% block title %}{{ 'cart.title'|trans }}{% endblock %}
{% block page_keywords %}Jeans, Ranked Choice Homepage, Jackets{% endblock %}
{% block page_description %}User's cart of RankedChoice shop!{% endblock %}

{% block body %}
    <div class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="page-details mt-4">
                        <h1 class="h4 font-weight-normal title-gradient-1">{{ 'cart.your_cart'|trans }}</h1>
                        <div class="row">
                            <div class="col-lg-12 order-block">
                                <div class="order-content">
                                    {% if cart %}
                                        {% set cartPriceTotal = 0 %}
                                        <table class="table table-cart table-mobile main-cart-show">
                                            <thead>
                                            <tr>
                                                <th>{{ 'cart.product'|trans }}</th>
                                                <th>{{ 'cart.price'|trans }}</th>
                                                <th>{{ 'cart.quantity'|trans }}</th>
                                                <th>{{ 'cart.total'|trans }}</th>
                                                <th></th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for cartProduct in cart.cartProducts %}
                                                {% set product = cartProduct.product %}
                                                {% set images = product.getProductImages().getValues() %}
                                                <tr>
                                                    <td class="product-col">
                                                        <div class="text-center">
                                                            <figure>
                                                                {% if images|length %}
                                                                    {% set cover = images[0] %}
                                                                    <a href="{{ path('main_cart_show', {'uuid': product.uuid}) }}"
                                                                       target="_blank">
                                                                        <img
                                                                                src="{{ asset('uploads/images/products/' ~ product.id ~ '/' ~ cover.filename) }}"
                                                                                alt="{{ product.title }}"
                                                                        >
                                                                    </a>
                                                                {% endif %}
                                                            </figure>
                                                            <div class="product-title">
                                                                <a href="{{ path('main_cart_show', {'uuid': product.uuid}) }}"
                                                                   target="_blank">
                                                                    {{ product.title|trans({'%name%': product.title})|raw }}
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </td>

                                                    <td class="price-col">
                                                        ${{ product.price }}
                                                    </td>

                                                    <td class="quantity-col">
                                                        {{ cartProduct.quantity }}
                                                    </td>

                                                    <td class="total-col">
                                                        {% set cartProductPriceTotal = cartProduct.quantity * product.price %}
                                                        {% set cartPriceTotal = cartPriceTotal + cartProductPriceTotal %}
                                                        ${{ cartProductPriceTotal }}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>

                                        <div class="mb-2 mt-2">
                                            {{ 'cart.total_ammount'|trans }} <strong>${{ cartPriceTotal }}</strong>
                                        </div>

                                        <a href="{{ path('main_cart_create') }}" class="btn btn-success mb-3 text-white">
                                            {{ 'cart.make_order'|trans }}
                                        </a>
                                    {% else %}
                                        <div class="alert alert-info">{{ 'cart.empty'|trans }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}